#!/usr/bin/env bash

# Use Gitâ€™s colored diff when available
hash git &>/dev/null;
if [ $? -eq 0 ]; then
  function diff() {
    git diff --no-index --color-words "$@";
  }
fi;

# scp functions
function cp2katana() # Copy to katana using kdm (katana data manager)
{
  scp -r $1 z3319805@kdm.restech.unsw.edu.au:/home/z3319805/$2
}
